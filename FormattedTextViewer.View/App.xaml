<Application x:Class="FormattedTextViewer.View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewioc="clr-namespace:FormattedTextViewer.View.Ioc"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <viewioc:AppBootstrapper x:Key="bootstrapper"></viewioc:AppBootstrapper>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="DropDownStyle" TargetType="{x:Type ComboBox}">
                <Setter Property="Width" Value="50"></Setter>
                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
